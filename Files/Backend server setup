sudo mkdir -p /var/www/api.luckyblock.brugu.io/html
sudo chown -R $USER:$USER /var/www/api.luckyblock.brugu.io/html
sudo chmod -R 755 /var/www
sudo cp /etc/nginx/sites-available/default /etc/nginx/sites-available/api.luckyblock.brugu.io
sudo ln -s /etc/nginx/sites-available/api.luckyblock.brugu.io /etc/nginx/sites-enabled/
sudo nano /etc/nginx/sites-available/api.luckyblock.brugu.io

server {
    listen 80;
    listen [::]:80;
    server_name api.luckyblock.brugu.io;
    root /var/www/html;
    location / {
        if ($request_method = 'OPTIONS') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS, PUT';
            #
            # Custom headers and headers various browsers should be OK with but aren't
            #
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            #
            # Tell client that this pre-flight info is valid for 20 days
            #
            add_header 'Access-Control-Max-Age' 1728000;
            add_header 'Content-Type' 'text/plain; charset=utf-8';
            add_header 'Content-Length' 0;
            return 204;
        }
        if ($request_method = 'POST') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
        }
        if ($request_method = 'GET') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
        }
        if ($request_method = 'PUT') {
            add_header 'Access-Control-Allow-Origin' '*';
            add_header 'Access-Control-Allow-Methods' 'GET, POST, OPTIONS,PUT';
            add_header 'Access-Control-Allow-Headers' 'DNT,User-Agent,X-Requested-With,If-Modified-Since,Cache-Control,Content-Type,Range';
            add_header 'Access-Control-Expose-Headers' 'Content-Length,Content-Range';
        }
        proxy_pass http://localhost:5500;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection 'upgrade';
        proxy_set_header Host $host;
        proxy_cache_bypass $http_upgrade;
    }
    access_log off;
    error_log  /var/log/nginx/luckyblock-backend-error.log error;
    sendfile off;
    client_max_body_size 100m;
    #ERROR
    # error_page 404 /index.php;
    #DENY HTACCESS
    location ~ /\.ht {
        deny all;
    }
}
server {
	if($host = dev.luckyblock.brugu.io) {
		return 301 https://$host$request_uri;
	}
	
	listen 80;
	listen [::]:80;
	server_name dev.luckyblock.brugu.io;
	return 404;
}
